{
  "manifest_version": 3,
  "name": "PromptPilot",
  "version": "0.1.0",
  "description": "AI-powered prompt improvement tool",
  "action": {
    "default_popup": "index.html",
    "default_title": "PromptPilot"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.anthropic.com/*",
        "*://*.huggingface.co/*",
        "*://*.perplexity.ai/*",
        "*://*.bard.google.com/*",
        "*://*.gemini.google.com/*",
        "*://*.claude.ai/*",
        "*://*.bing.com/chat/*",
        "*://*.codeium.com/*",
        "*://*.cohere.com/*",
        "*://*.deepinfra.com/*",
        "*://*.replicate.com/*",
        "*://*.chatgpt.com/*",
        "*://*.grok.com/*",
        "*://*.x.ai/*",
        "*://*.deepseek.com/*",
        "*://*.deepseek.ai/*",
        "*://*.mistral.ai/*",
        "*://chat.mistral.ai/*",
        "*://chat.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "scripting", "storage", "tabs", "identity"],
  "host_permissions": [
    "http://localhost:4001/*",
    "https://promptpilot-production-up.railway.app/*",
    "https://api.stripe.com/*",
    "https://checkout.stripe.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "1128556524-vacsol5k8o1pdms42mi0focqchq3kp94.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["success.html", "cancel.html", "success.js", "cancel.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
